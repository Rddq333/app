.nav-bar-outer {
  width: 100%;
  background: #fff;
  box-shadow: 0 2px 8px #f0f1f2;
}
.nav-bar {
  display: flex;
  align-items: center;
  height: 48px;
  background: #fff;
  padding: 0 12px;
}
.nav-left, .nav-right {
  display: flex;
  align-items: center;
}
.nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 500;
}
.nav-btn {
  margin-right: 8px;
  cursor: pointer;
}
