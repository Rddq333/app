/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  display: block;
  margin-top: 100rpx;
  padding: 0;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.subtitle {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 30rpx;
}
.status {
  font-size: 32rpx;
  color: #4caf50;
  margin-bottom: 10rpx;
}
.temp {
  font-size: 32rpx;
  color: #2196f3;
  margin-bottom: 40rpx;
}
button {
  width: 80%;
  margin: 20rpx 0;
  font-size: 32rpx;
}
.btn-group {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.main-bg {
  padding: 0;
  padding-top: 80rpx;
}
.device-card {
  width: 92%;
  max-width: 600rpx;
  margin: 0 auto 48rpx auto;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 32rpx 32rpx 32rpx;
  text-align: center;
  box-sizing: border-box;
}
.device-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #222;
}
.device-en {
  font-size: 28rpx;
  color: #8ca0b3;
  margin-bottom: 16rpx;
}
.device-status {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 32rpx;
  margin-top: 16rpx;
}
.device-temp {
  font-size: 36rpx;
  color: #3b82f6;
}

/* 模式选择区域 */
.mode-selection {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 32rpx;
  text-align: center;
}
.mode-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}
.mode-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-sizing: border-box;
  transition: all 0.3s ease;
}
.mode-card:active {
  transform: scale(0.98);
  opacity: 0.8;
}
.mode-icon {
  margin-bottom: 16rpx;
}
.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 8rpx;
}
.mode-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.4;
}
.mode-duration {
  font-size: 22rpx;
  color: #3b82f6;
  font-weight: 500;
}

/* 快捷功能区域 */
.quick-actions {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}
.action-grid {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}
.action-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  min-width: 120rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}
.action-card:active {
  transform: scale(0.95);
  opacity: 0.8;
}
.action-card text {
  font-size: 24rpx;
  color: #222;
  font-weight: 500;
}

/* 原有功能卡片样式保留 */
.func-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}
.func-card {
  width: 90%;
  max-width: 500rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #222;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}
.shadow {
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
}
