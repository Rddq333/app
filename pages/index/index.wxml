<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="main-bg">
      <!-- 设备状态卡片 -->
      <view class="device-card shadow">
        <view class="device-title">{{currentRunningDevice || deviceName}}</view>
        <view class="device-en">{{deviceNameEn}}</view>
        <view class="device-status">
          <van-tag type="{{status === '运行' ? 'success' : 'default'}}">{{status}}</van-tag>
          <text class="device-temp">{{temp}}</text>
        </view>
      </view>

      <!-- 模式选择区域 -->
      <view class="mode-selection">
        <view class="section-title">理疗模式选择</view>
        <view class="mode-grid">
          <!-- 红外理疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="infrared">
            <view class="mode-icon">
              <image src="/images/infrared.gif" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">红外理疗</view>
            <view class="mode-desc">红外线热疗，促进血液循环</view>
            <view class="mode-duration">30分钟</view>
          </view>

          <!-- 超音波水疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="hydrotherapy">
            <view class="mode-icon">
              <image src="/images/hydrotherapy.gif" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">超音波水疗</view>
            <view class="mode-desc">超声波水疗，深层清洁</view>
            <view class="mode-duration">45分钟</view>
          </view>

          <!-- 艾灸理疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="moxibustion">
            <view class="mode-icon">
              <image src="/images/moxibustion.gif" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">艾灸理疗</view>
            <view class="mode-desc">传统艾灸，温经通络</view>
            <view class="mode-duration">60分钟</view>
          </view>

          <!-- 中药浴理疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="herbalBath">
            <view class="mode-icon">
              <image src="/images/herbal-bath.gif" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">中药浴理疗</view>
            <view class="mode-desc">中药浸泡，调理身体</view>
            <view class="mode-duration">40分钟</view>
          </view>

          <!-- 香氛理疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="aromatherapy">
            <view class="mode-icon">
              <image src="/images/aromatherapy.png" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">香氛理疗</view>
            <view class="mode-desc">精油香氛，舒缓身心</view>
            <view class="mode-duration">35分钟</view>
          </view>

          <!-- 音乐理疗模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="musicTherapy">
            <view class="mode-icon">
              <image src="/images/music-therapy.gif" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">音乐理疗</view>
            <view class="mode-desc">音乐疗愈，放松心情</view>
            <view class="mode-duration">25分钟</view>
          </view>

          <!-- 自定义模式 -->
          <view class="mode-card shadow" bindtap="selectMode" data-mode="custom">
            <view class="mode-icon">
              <image src="/images/set.png" class="mode-image" mode="aspectFit"></image>
            </view>
            <view class="mode-title">自定义模式</view>
            <view class="mode-desc">自由组合功能</view>
            <view class="mode-duration">自定义</view>
          </view>
        </view>
      </view>

      <!-- 功能快捷入口 -->
      <view class="quick-actions">
        <view class="section-title">快捷功能</view>
        <view class="action-grid">
          <view class="action-card shadow" bindtap="goToMonitor">
            <view class="mode-icon">
              <image src="/images/monitor.png" class="mode-image" mode="aspectFit"></image>
            </view>
            <text>实时监测</text>
          </view>
          <view class="action-card shadow" bindtap="goToAppConnect">
            <view class="mode-icon">
              <image src="/images/connect.png" class="mode-image" mode="aspectFit"></image>
            </view>
            <text>设备连接</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
