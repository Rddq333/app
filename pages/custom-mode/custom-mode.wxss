/* custom-mode.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 页面标题 */
.page-header {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx 32rpx;
  text-align: center;
  border-radius: 0 0 32rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 模式切换标签 */
.mode-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 32rpx 24rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.tab-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.tab-duration {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 配置内容区域 */
.config-content {
  height: 60vh;
  margin: 0 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.mode-config {
  display: none;
}

.mode-config.active {
  display: block;
}

.config-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 运行信息 */
.running-info {
  margin: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 控制按钮 */
.control-buttons {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.btn-group {
  display: flex;
  gap: 16rpx;
}

.btn-group .van-button {
  flex: 1;
  border-radius: 12rpx !important;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
}

/* 滑块样式优化 */
.van-slider {
  margin: 0 16rpx;
}

/* 复选框组样式 */
.van-checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.van-checkbox {
  margin-right: 0 !important;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.van-checkbox__label {
  font-size: 28rpx;
  color: #333;
}

/* 开关样式 */
.van-switch {
  margin-left: auto;
}

/* 单元格样式优化 */
.van-cell {
  padding: 24rpx 0 !important;
  border-bottom: 1rpx solid #f5f5f5;
}

.van-cell:last-child {
  border-bottom: none;
}

.van-cell__title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.van-cell__value {
  font-size: 28rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .mode-tabs {
    margin: 0 16rpx 16rpx;
  }
  
  .config-content {
    margin: 0 16rpx;
    height: 50vh;
  }
  
  .running-info,
  .control-buttons {
    margin: 16rpx;
  }
  
  .btn-group {
    flex-direction: column;
  }
}

/* 动画效果 */
.tab-item {
  transform: scale(1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-item.active {
  transform: scale(1.05);
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

/* 顶部标题区 */
.custom-header {
  padding: 32rpx 0 16rpx 0;
  text-align: center;
}
.custom-title {
  font-size: 36rpx;
  font-weight: bold;
}
.custom-subtitle {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

/* 横向滑动卡片区 */
.mode-tab-scroll {
  margin: 0 0 24rpx 0;
  padding: 0 16rpx;
  white-space: nowrap;
}
.mode-tab-list {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
}
.mode-tab-card {
  min-width: 180rpx;
  padding: 20rpx 16rpx;
  border-radius: 24rpx;
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  opacity: 0.7;
  transition: 0.2s;
  margin-bottom: 8rpx;
}
.mode-tab-card.active {
  opacity: 1;
  border: 2rpx solid #fff;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.12);
}
.mode-tab-title {
  font-size: 28rpx;
  font-weight: bold;
}
.mode-tab-duration {
  font-size: 22rpx;
  margin-top: 8rpx;
}

/* 参数区块 */
.mode-param-section {
  margin: 24rpx 16rpx 0 16rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.param-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

/* 控制按钮美化 */
.control-buttons {
  margin: 32rpx 16rpx 0 16rpx;
}
.round-btn {
  border-radius: 32rpx !important;
  font-size: 30rpx;
  font-weight: 500;
}

/* 运行信息区块 */
.running-info {
  margin: 32rpx 16rpx 0 16rpx;
  border-radius: 20rpx;
  background: #f7f7fa;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  padding: 20rpx 0;
}

/* 提示信息区块 */
.tip-info {
  margin: 32rpx 16rpx 0 16rpx;
  border-radius: 20rpx;
  background: #fffbe8;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  padding: 20rpx 0;
}

/* 分割线 */
.config-section + .config-section {
  margin-top: 32rpx;
  border-top: 1rpx solid #eee;
  padding-top: 24rpx;
}

.quick-time-btns {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
}
.quick-btn {
  border-radius: 20rpx;
  font-size: 24rpx;
  padding: 0 16rpx;
} 