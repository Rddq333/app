.page-content {
  padding-top: 120rpx;
}

/* 理疗模式卡片样式 */
.therapy-mode-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
}

.therapy-mode-card .section-title {
  color: white;
  margin-bottom: 24rpx;
}

.mode-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.mode-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mode-details {
  flex: 1;
}

.mode-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.mode-stats {
  display: flex;
  gap: 40rpx;
  padding: 20rpx 0;
  border-top: 1px solid rgba(255,255,255,0.2);
  border-bottom: 1px solid rgba(255,255,255,0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  font-family: monospace;
}

.mode-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.features-title {
  font-size: 28rpx;
  font-weight: bold;
}

.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  margin-top: 0;
}
.chart-placeholder {
  height: 300rpx;
  background: #f0f0f0;
  color: #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}
.custom-navbar {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  border-radius: 0 0 24rpx 24rpx;
  margin-bottom: 32rpx;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.back-btn {
  margin-top: 0;
  margin-bottom: 0;
  width: 120rpx;
}

.monitor-buttons {
  margin: 40rpx 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.monitor-buttons .van-button, .round-btn {
  border-radius: 16rpx !important;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.08);
}
.van-button--success {
  background: linear-gradient(135deg, #10b981 0%, #34d399 100%) !important;
  border: none !important;
  color: #fff !important;
}
.van-button--danger {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%) !important;
  border: none !important;
  color: #fff !important;
}

/* 新增美化的监测按钮样式 */
.monitor-btn {
  width: 80%;
  margin: 0 auto 32rpx auto;
  padding: 28rpx 0;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  box-shadow: 0 6rpx 24rpx rgba(0, 180, 120, 0.15);
  transition: background 0.3s;
}
.monitor-btn.refresh {
  background: linear-gradient(90deg, #00e676 0%, #00c853 100%);
}
.monitor-btn.export {
  background: linear-gradient(90deg, #ffb88c 0%, #ff7e5f 100%);
  margin-bottom: 0;
} 