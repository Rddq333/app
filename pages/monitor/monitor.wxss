.page-content {
  padding-top: 120rpx;
}

/* 理疗模式卡片样式 */
.therapy-mode-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
}

.therapy-mode-card .section-title {
  color: white;
  margin-bottom: 24rpx;
}

.mode-info {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.mode-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mode-details {
  flex: 1;
}

.mode-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.mode-stats {
  display: flex;
  gap: 40rpx;
  padding: 20rpx 0;
  border-top: 1px solid rgba(255,255,255,0.2);
  border-bottom: 1px solid rgba(255,255,255,0.2);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  font-family: monospace;
}

.mode-features {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.features-title {
  font-size: 28rpx;
  font-weight: bold;
}

.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  margin-top: 0;
}
.chart-placeholder {
  height: 300rpx;
  background: #f0f0f0;
  color: #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}
.custom-navbar {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  border-radius: 0 0 24rpx 24rpx;
  margin-bottom: 32rpx;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.back-btn {
  margin-top: 0;
  margin-bottom: 0;
  width: 120rpx;
} 