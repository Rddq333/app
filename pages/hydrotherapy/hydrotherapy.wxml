<navigation-bar title="水疗功能" back="true"></navigation-bar>
<view class="page-content">
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading">加载中...</view>
  </view>
  <view class="card">
    <view class="section-title">水疗设置</view>
    <van-cell-group>
      <van-cell title="当前状态" value="{{status}}" />
      <van-cell title="水温调节">
        <van-slider min="30" max="45" value="{{temp}}" show-value bind:change="onTempChange" />
      </van-cell>
      <van-cell title="水压调节">
        <van-picker columns="{{pressureOptions}}" value="{{pressureOptions.indexOf(pressure)}}" bind:change="onPressureChange" />
      </van-cell>
      <van-cell title="按摩模式">
        <van-picker columns="{{massageOptions}}" value="{{massageOptions.indexOf(massageMode)}}" bind:change="onMassageChange" />
      </van-cell>
      <van-cell title="定时设置">
        <van-picker columns="{{timerOptions}}" value="{{timerOptions.indexOf(timer)}}" bind:change="onTimerChange" />
      </van-cell>
      <van-cell title="预设程序">
        <van-picker columns="{{presetOptions}}" value="{{presetOptions.indexOf(preset)}}" bind:change="onPresetChange" />
      </van-cell>
    </van-cell-group>
    <view class="btn-group">
      <van-button type="primary" block bind:tap="startHydrotherapy" loading="{{loading}}">启动水疗</van-button>
      <van-button type="danger" block bind:tap="stopHydrotherapy" loading="{{loading}}">停止水疗</van-button>
    </view>
  </view>
</view> 