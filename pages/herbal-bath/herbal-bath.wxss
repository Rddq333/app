.page-content {
  padding-top: 120rpx;
  padding-bottom: 40rpx;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #f59e42 0%, #ea580c 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(245, 158, 66, 0.3);
}

.status-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 配置卡片 */
.config-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  margin-top: 0;
}

/* 控制按钮 */
.control-buttons {
  padding: 0 32rpx;
  margin-top: 40rpx;
}

/* 温度滑块样式 */
.van-slider__bar {
  background-color: #f59e42 !important;
}

.van-slider__button {
  background-color: #f59e42 !important;
  border-color: #f59e42 !important;
} 