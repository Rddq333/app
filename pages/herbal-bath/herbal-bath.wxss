.page-content {
  padding-top: 120rpx;
  padding-bottom: 40rpx;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #f59e42 0%, #ea580c 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(245, 158, 66, 0.3);
}

.status-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-info {
  flex: 1;
}

.status-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 配置卡片 */
.config-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 32rpx 0 16rpx 0;
  color: #333;
}

/* 控制按钮 */
.control-buttons {
  padding: 0 32rpx;
  margin-top: 40rpx;
}

.control-buttons .van-button, .round-btn {
  border-radius: 16rpx !important;
}

/* 温度滑块样式 */
.van-slider__bar {
  background-color: #f59e42 !important;
}

.van-slider__button {
  background-color: #f59e42 !important;
  border-color: #f59e42 !important;
}

.herbal-bath-container {
  padding: 32rpx;
  background: #f7f8fa;
}

.param-row {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  flex-direction: column;
}

.param-label {
  font-size: 28rpx;
  color: #222;
  margin-bottom: 8rpx;
}

.param-value {
  font-size: 24rpx;
  color: #3b82f6;
  margin-top: 8rpx;
}

.quick-btns {
  display: flex;
  gap: 16rpx;
  margin: 8rpx 0;
}

.quick-btn {
  background: #f3f4f6;
  color: #333;
  border-radius: 12rpx;
  margin-right: 8rpx;
}

.picker-value {
  font-size: 26rpx;
  color: #222;
  padding: 8rpx 0;
}

.btn-group {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.pause-btn, .resume-btn, .stop-btn {
  flex: 1;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.start-btn {
  width: 100%;
  font-size: 32rpx;
  background: #10b981;
  color: #fff;
  border-radius: 16rpx;
} 