.moxibustion-container {
  padding: 32rpx;
  background: #f7f8fa;
  margin-top: 0;
  padding-top: 0;
}
.label {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #e57373;
}
.picker {
  margin: 10rpx 0 20rpx 0;
  padding: 16rpx 24rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 32rpx;
}
button {
  margin: 20rpx 0;
}
.btn-group {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}
.pause-btn, .resume-btn, .stop-btn {
  flex: 1;
  font-size: 32rpx;
  border-radius: 16rpx;
}
.start-btn {
  width: 100%;
  font-size: 32rpx;
  background: #f59e0b;
  color: #fff;
  border-radius: 16rpx;
}
.custom-navbar {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  border-radius: 0 0 24rpx 24rpx;
  margin-bottom: 32rpx;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.back-btn {
  margin-top: 0;
  margin-bottom: 0;
  width: 120rpx;
}
.page-content {
  padding-top: 120rpx;
  padding-bottom: 40rpx;
  height: 100vh;
  box-sizing: border-box;
  overflow: auto;
  margin-top: 0;
  padding-top: 0;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 32rpx 0 16rpx 0;
  color: #333;
}
.param-row {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  flex-direction: column;
}
.param-label {
  font-size: 28rpx;
  color: #222;
  margin-bottom: 8rpx;
}
.param-value {
  font-size: 24rpx;
  color: #3b82f6;
  margin-top: 8rpx;
}
.quick-btns {
  display: flex;
  gap: 16rpx;
  margin: 8rpx 0;
}
.quick-btn {
  background: #f3f4f6;
  color: #333;
  border-radius: 12rpx;
  margin-right: 8rpx;
}
.picker-value {
  font-size: 26rpx;
  color: #222;
  padding: 8rpx 0;
}
.status-card {
  background: linear-gradient(135deg, #a3c23c 0%, #7bb661 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(163, 194, 60, 0.18);
}
.status-header {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.status-info {
  flex: 1;
}
.status-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}
.status-desc {
  font-size: 28rpx;
  opacity: 0.9;
}
.control-buttons {
  padding: 0 32rpx;
  margin-top: 40rpx;
}
.control-buttons .van-button, .round-btn {
  border-radius: 16rpx !important;
}
.van-slider__bar {
  background-color: #a3c23c !important;
}
.van-slider__button {
  background-color: #a3c23c !important;
  border-color: #a3c23c !important;
}
.config-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
} 