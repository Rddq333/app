.moxibustion-container {
  padding: 40rpx;
  font-size: 36rpx;
}
.label {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #e57373;
}
.picker {
  margin: 10rpx 0 20rpx 0;
  padding: 16rpx 24rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 32rpx;
}
button {
  margin: 20rpx 0;
}
.btn-group {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}
.custom-navbar {
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 24rpx;
  background: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  border-radius: 0 0 24rpx 24rpx;
  margin-bottom: 32rpx;
}
.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
}
.back-btn {
  margin-top: 0;
  margin-bottom: 0;
  width: 120rpx;
}
.page-content {
  height: 100vh;
  padding-top: 120rpx;
  box-sizing: border-box;
  overflow: auto;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #222;
  margin-bottom: 24rpx;
  margin-top: 0;
} 